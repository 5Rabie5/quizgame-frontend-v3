cat <<EOF > .gitignore
# Angular & Node
node_modules/
dist/
tmp/
out-tsc/

# Environment files
src/environments/*.ts
!.src/environments/environment.ts

# IDE settings
.vscode/
.idea/

# System files
.DS_Store
Thumbs.db

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Compiled output
*.js
*.js.map

# OS files
*.swp
.sass-cache/
.cache/
.parcel-cache/

# NVM
.nvmrc

# Optional: Ignore coverage output from tests
coverage/
EOF
